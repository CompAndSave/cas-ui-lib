                    x-cloak>
                    <div class="fixed inset-0 bg-midnight bg-opacity-75 transition-opacity" x-show="isOpen"
                        x-transition:enter="ease-out duration-300" x-transition:enter-start="opacity-0"
                        x-transition:enter-end="opacity-100" x-transition:leave="ease-in duration-200"
                        x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0" x-cloak></div>

                    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
                        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                            <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg"
                                x-show="isOpen" x-trap.inert="isOpen" x-transition:enter="ease-out duration-300"
                                x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                                x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                                x-transition:leave="ease-in duration-200"
                                x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                                x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95" x-cloak>
                                <button type="button"
                                    class="absolute right-4 top-2 text-xl font-semibold text-ui-gray hover:text-secondary"
                                    @click="isOpen = !isOpen">x</button>
                                <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                                    <div class="mt-3 text-center">
                                        <h3 id="modal-title">Modal Title</h3>
                                        <div class="mt-2">
                                            <p>content here</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="bg-off-white px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6 gap-4">
                                    <button type="button" class="btn py-2.5" @click="isOpen = !isOpen">Submit</button>
                                    <button type="button" class="btn-flat py-2.5"
                                        @click="isOpen = !isOpen">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </script>
        </div>
    </div>
</div>